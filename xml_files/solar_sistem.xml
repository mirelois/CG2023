<world>
    <window width="512" height="512" />
    <camera>
        <position x="10" y="10" z="10" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>
    <group>
        <!-- Sun-->
        <transform>
            <scale x="5" y="5" z="5" />
        </transform>
        <models>
            <model file="sphere.3d" />
        </models>
        <group>
            <!-- Mercury-->
            <transform>
                <translate x="5" y="0" z="0" />
                <rotate angle="0" x="0" y="0" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transform>
        </group>
        <group>
            <!-- Venus-->
            <transform>
                <translate x="10" y="0" z="0" />
                <rotate angle="0" x="0" y="0" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transform>
        </group>
        <group>
            <!-- Earth-->
            <transform>
                <translate x="15" y="0" z="0" />
                <rotate angle="0" x="0" y="0" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transform>
            <group>
                <!-- Moon-->
                <transform>
                    <translate x="0" y="5" z="0" />
                    <rotate angle="0" x="0" y="0" z="0" />
                    <scale x="0.25" y="0.25" z="0.25" />
                </transform>
            </group>
        </group>
        <group>
            <!-- Mars-->
            <transform>
                <translate x="20" y="0" z="0" />
                <rotate angle="0" x="0" y="0" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transform>
        </group>
        <group>
            <!-- Jupiter-->
            <transform>
                <translate x="25" y="0" z="0" />
                <rotate angle="0" x="0" y="0" z="0" />
                <scale x="0.75" y="0.75" z="0.75" />
            </transform>
        </group>
        <group>
            <!-- Saturn-->
            <transform>
                <translate x="30" y="0" z="0" />
                <rotate angle="0" x="0" y="0" z="0" />
                <scale x="0.75" y="0.75" z="0.75" />
            </transform>
        </group>
        <group>
            <!-- Uranus-->
            <transform>
                <translate x="35" y="0" z="0" />
                <rotate angle="0" x="0" y="0" z="0" />
                <scale x="0.75" y="0.75" z="0.75" />
            </transform>
        </group>
    </group>
</world>




